<h1>All Users</h1>
<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr onclick="window.location='<%= user_path(user) %>'" style="cursor: pointer;">
        <td>
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar.variant(resize_to_limit: [50, 50]), alt: "#{user.name} avatar" %>
          <% else %>
            <%= image_tag asset_path("Q_DefaultAvatar.png"), size: "50x50", alt: "Default avatar" %>
          <% end %>
        </td>
        <td>
          <% if user.name.present? || user.surname.present? %>
            <%= "#{user.name} #{user.surname}".strip %>
          <% else %>
            No name provided
          <% end %>
        </td>
        <td>
          <%= user.email %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
