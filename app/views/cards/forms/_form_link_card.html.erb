<%= f.hidden_field :card_type, value: 'link' %>
<%= f.hidden_field :size, value: f.object.size, data: { card_size_target: "input" } %>
<%= f.hidden_field :position, value: f.object.position %>
<%= f.hidden_field :_destroy, value: 0, data: { card_removal_target: "destroyInput" } %>
<%= f.text_field :title, 
                       placeholder: "Название",
                       class: "A_LinkCardTitle U_Form" %>
<%= f.text_field :url, 
                       placeholder: "Ссылка",
                       class: "A_LinkCardUrlPreview U_Form" %>
